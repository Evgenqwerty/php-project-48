{
    "name": "hexlet/code",
    "description": "difference calculator",
    "bin": [
        "bin/gendiff"
    ],
    "autoload": {
        "files":[
            "src/Parser/Parser.php",
            "src/Differ/Differ.php",
            "src/Formatters/Render.php",
            "src/Formatters/Json/Json.php",
            "src/Formatters/Stylish/Stylish.php",
            "src/Formatters/Plain/Plain.php"
        ],
        "psr-4": {
            "Hexlet\\Code\\": "src/"
        }
    },
    "authors": [
        {
            "name": "John"
        }
    ],
    "require": {
        "docopt/docopt": "^1.0",
        "symfony/yaml": "^7.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.1",
        "squizlabs/php_codesniffer": "^3.13",
        "phpstan/phpstan": "^2.1"
    }
}
